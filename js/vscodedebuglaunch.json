{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Docker: Attach to Node",
			"remoteRoot": "/app",
			"localRoot": "${workspaceFolder}",
			"port": 9222,
			"address": "127.0.0.1",
			"restart": true,
			"trace": true,
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			]
		},
		{
			"name": "Launch file",
			"program": "${workspaceFolder}/openshift/findNcc.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		},
		{
			"name": "Attach to local Node (Nodemon)",
			"type": "node",
			"request": "attach",
			"restart": true,
			"protocol": "inspector",
			"port": 9222,
			"skipFiles": [
				"<node_internals>/**"
			]
		}
	]
}